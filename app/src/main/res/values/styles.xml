<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/main_color_3</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/main_color_3</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_color_3</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>